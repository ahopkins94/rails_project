<% if user_signed_in? %>
  <%= link_to('Log Out', destroy_user_session_path, method: :delete) %>
  <%= link_to new_user_post_path(current_user) do %>
    <p> Post Item </p>
  <% end %>
  <% @user.posts.each do |post| %>
    <br>
      <pre><%= post.description %></pre>
      <pre><%= post.quality %></pre>
      <pre><%= post.postage_details %></pre>
    Posted at: <%= post.updated_at.strftime("%Y-%m-%d %k:%M")%>
  <% end %>
<% else %>
  <p>Register to get started</p>
  <p><%= link_to 'Sign Up', new_user_registration_path, class: 'btn' %></p>
  <p>Login below if already a member</p>
    <p><%= link_to 'Log In', new_user_session_path, class: 'btn' %></p>
<% end %>
